<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_blue"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back_button_description"
                    android:src="@drawable/ic_arrow_back"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_current_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wednesday, 23 April"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:alpha="0.8" />
                </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Główna zawartość -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <TextView
            android:id="@+id/tvPendingCount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Pending Suggestions (2)"
            android:background="#E0E0E0"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New Suggestion"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etActivityTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Activity Title"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPickDate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Pick date"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etStartTime"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Start time"
                android:background="@android:drawable/edit_text"
                android:padding="8dp"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etEndTime"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="End time"
                android:background="@android:drawable/edit_text"
                android:padding="8dp"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Notes"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:gravity="top"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnSendSuggestion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Send Suggestion"
            android:background="#4A90E2"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Dolna nawigacja -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/nav_item_selected"
            android:padding="8dp"
            android:src="@drawable/ic_home"
            app:tint="#6B46C1" />

        <ImageView
            android:id="@+id/navCalendar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/nav_item_background"
            android:padding="8dp"
            android:src="@drawable/ic_calendar"
            app:tint="#999999" />

        <ImageView
            android:id="@+id/navChat"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/nav_item_background"
            android:padding="8dp"
            android:src="@drawable/ic_chat"
            app:tint="#999999" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/nav_item_background"
            android:padding="8dp"
            android:src="@drawable/ic_person"
            app:tint="#999999" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
